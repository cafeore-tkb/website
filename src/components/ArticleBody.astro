---
export interface Props {
  htmlContent: string;
}

const { htmlContent } = Astro.props;
---

<div class="article-content" set:html={htmlContent} />

<style>
  .article-content {
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: #006367;
    }
    /* content内の画像にスタイルを適用 */
    img {
      width: 100%;
      height: auto;
      max-width: 100%;
      display: block;
      margin: 1rem 0;
    }
  }
</style>
