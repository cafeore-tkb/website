---
export interface Props {
  htmlContent: string;
}

const { htmlContent } = Astro.props;
---

<div class="article-content" set:html={htmlContent} />

<style>
  .article-content {
    padding-inline: 1rem;
    line-height: 1.8rem;
    font-size: 1rem;
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: var(--cafeore-brown);
    }
    /* content内の画像にスタイルを適用 */
    img {
      width: 100%;
      height: auto;
      max-width: 100%;
      display: block;
      margin: 1rem 0;
    }
  }
</style>
