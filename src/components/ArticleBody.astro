---
import { optimizeImages } from "../utils/image-processor";

export interface Props {
  htmlContent: string;
}

const { htmlContent } = Astro.props;
const htmlWithImageOptimized = await optimizeImages(htmlContent);
---

<div class="article-content" set:html={htmlWithImageOptimized} />

<style>
  .article-content {
    padding-inline: 1rem;
    line-height: 1.8rem;
    font-size: 1rem;
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: var(--cafeore-brown);
    }
    /* content内の画像にスタイルを適用 */
    figure {
      margin-inline: 12px;
    }
    img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 12px;
    }
    @media (max-width: 620px) {
      figure {
        margin-inline: 0;
      }
    }
  }
</style>
