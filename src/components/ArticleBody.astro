---
import { optimizeImages } from "../utils/image-processor";

export interface Props {
  htmlContent: string;
}

const { htmlContent } = Astro.props;
const htmlWithImageOptimized = await optimizeImages(htmlContent);
---

<div class="article-content" set:html={htmlWithImageOptimized} />

<style>
  .article-content {
    padding-inline: 1rem;
    font-size: 1rem;
    line-height: 1.8rem;

    h2,
    h3,
    h4,
    h5,
    h6 {
      color: var(--cafeore-brown);
    }

    figure {
      margin-inline: 12px;
    }

    img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 12px;
    }

    a {
      color: var(--sepia);
      text-underline-offset: 0.2em;
    }

    a:visited {
      color: var(--cafeore-cream);
    }

    a:hover {
      color: var(--orange);
    }

    blockquote {
      padding-inline-start: 1rem;
      color: var(--gray-dark);
      border-left: 3px solid var(--cafeore-cream);
    }

    u {
      text-decoration: underline;
      text-decoration-thickness: 3px;
      text-decoration-color: var(--cafeore-cream);
      text-decoration-skip-ink: auto;
      text-underline-offset: -2px;
    }

    @media (width <= 620px) {
      figure {
        margin-inline: 0;
      }
    }
  }
</style>
