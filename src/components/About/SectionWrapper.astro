---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!-- セクションラッパー -->
<section class="section-wrapper">
  <div class="section-wrapper-inner">
    <h2 class="section-title">{title}</h2>
    {description && <p class="section-description">{description}</p>}
  </div>

  <div class="section-content">
    <slot />
  </div>
</section>

<style>
  /* 共通スタイル */
  .section-title {
    margin-bottom: 2rem;
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--cafeore-brown);
    text-align: center;
  }

  .section-description {
    margin-bottom: 2rem;
    font-size: 1.2rem;
    color: var(--cafeore-brown);
    text-align: center;
  }

  /* セクションラッパー */
  .section-wrapper {
    padding: 2rem;
    padding-top: 0;
    margin: 2rem auto;
  }

  .section-wrapper-inner {
    padding-inline: 2rem;
    text-align: center;
  }

  /* レスポンシブデザイン */
  @media (width <= 768px) {
    .section-title {
      font-size: 1.8rem;
    }

    .section-description {
      font-size: 1.1rem;
    }
  }

  @media (width <= 620px) {
    .section-wrapper {
      padding: 1rem;
      margin: 1rem auto;
    }

    .section-title {
      font-size: 1.5rem;
    }
  }
</style>
