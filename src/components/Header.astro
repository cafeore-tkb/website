---
import Logo from "../assets/logo_name_cafeore.svg";
---

<header class="header">
  <a class="top-link" href="/">
    <Logo
      class="logo"
      fill="#fff"
      role="img"
      aria-label="珈琲・俺（かふぇおれ）"
    />
  </a>
  <nav class="navigation">
    <ul class="link-list">
      <li class="link-item">
        <a class="link" href="/about">ABOUT</a>
      </li>
      <li class="link-item">
        <a class="link" href="/articles">NEWS</a>
      </li>
      <li class="link-item">
        <a class="link" href="/links">LINKS</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    padding: 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
    background-color: rgb(30, 13, 1);
  }
  .top-link {
    display: block;
    height: 100%;
    margin-inline-start: 16px;
  }
  .logo {
    height: 100%;
    width: auto;
  }
  .navigation {
    display: block;
    width: 100%;
    height: fit-content;
  }
  .link-list {
    padding-inline: 16px;
    margin-inline-start: auto;
    margin-block: 0;
    max-width: 320px;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .link-item {
    display: inline-block;
    height: 100%;
    list-style: none;
  }
  .link {
    display: inline-block;
    padding-inline: 16px;
    height: 50px;
    width: fit-content;
    text-decoration: none;
    line-height: 50px;
    font-size: 1.1rem;
    font-family: "Helvetica Neue"; /* Needs review for variation of OS */
    color: white;
  }
  .link:hover {
    text-decoration: underline;
    text-underline-offset: 4px;
  }
</style>
