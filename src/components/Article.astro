---
import type { Article } from "../apis/articles";
import { formatDate } from "../utils/date";
import ArticleBody from "./ArticleBody.astro";
import MicroCMSImage from "./MicroCMSImage.astro";

export interface Props {
  article: Article;
}

const { article } = Astro.props;
const { publishedAt, title, content, thumbnail } = article;

// publishedAt が有効な値の場合のみ日付を使用、無効な場合は null
const publishedDate = publishedAt ? new Date(publishedAt) : null;
---

<article>
  <div class="thumbnail-container">
    <MicroCMSImage
      class="thumbnail"
      src={thumbnail}
      quality="high"
      maxWidth={1200}
      alt=""
    />
  </div>
  <div class="article-header">
    <h1 class="article-title">{title}</h1>
    {
      publishedDate !== null && (
        <time class="published-date" datetime={publishedDate.toISOString()}>
          {formatDate(publishedDate)}
        </time>
      )
    }
  </div>
  <ArticleBody htmlContent={content} />
</article>

<style>
  .article-header {
    padding-inline: 1rem;
    margin-block-end: 2rem;
  }

  .article-title {
    margin-block-end: 0.5rem;
    color: var(--cafeore-brown);
  }

  .published-date {
    display: block;
    font-size: 0.9rem;
    color: var(--gray);
  }

  .thumbnail-container {
    margin-block-start: 3rem;
    margin-inline: 1rem;
  }

  .thumbnail {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  @media (width <= 620px) {
    .article-title {
      font-size: 1.5rem;
    }

    .thumbnail-container {
      margin: 0;
    }

    .thumbnail {
      border-radius: 0;
    }
  }
</style>
