---
import Logo from "../../assets/logo_name_cafeore.svg";
import InstagramIcon from "../../assets/icon-instagram.svg";
import XIcon from "../../assets/icon-x.svg";
import { INSTAGRAM_URL, X_URL } from "../../consts.ts";
---

<div class="container">
  <div class="header-top">
    <button id="mobile-button" class="button" type="button">
      <Logo
        class="logo"
        fill="white"
        role="img"
        aria-label="珈琲・俺（かふぇおれ）"
      />
    </button>
    <ul class="sns-list">
      <li>
        <a class="sns-link" href={INSTAGRAM_URL} target="_blank">
          <InstagramIcon
            role="img"
            aria-label="Instagram"
            class="sns-icon"
            fill="white"
          />
        </a>
      </li>
      <li>
        <a class="sns-link" href={X_URL} target="_blank">
          <XIcon role="img" aria-label="X" class="sns-icon" fill="white" />
        </a>
      </li>
    </ul>
  </div>
  <nav id="nav" class="navigation">
    <ul class="link-list">
      <li class="link-item">
        <a class="link top" href="/"> TOP </a>
      </li>
      <li class="link-item">
        <a class="link" href="/about"> ABOUT </a>
      </li>
      <li class="link-item">
        <a class="link" href="/articles"> NEWS </a>
      </li>
    </ul>
  </nav>
</div>

<script>
  const button = document.getElementById("mobile-button");
  const navigation = document.getElementById("nav");

  button?.addEventListener("click", () => {
    navigation?.classList.toggle("open");
  });
</script>

<style>
  .logo {
    width: auto;
    height: 100%;
  }

  .container {
    display: flex;
    flex-direction: column;
    height: fit-content;
    padding: 4px;

    /* background-color: rgb(from var(--ivory) r g b / 80%);
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    backdrop-filter: blur(30px); */
  }

  .header-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-inline: 8px 16px;
  }

  .button {
    display: inline-block;
    height: 50px;
    margin-block: 8px;
    cursor: pointer;
    background-color: transparent;
    border: 0;
  }

  .navigation {
    flex-direction: column;
    max-height: 0;
    margin-inline: 24px;
    overflow-y: hidden;
    transition-duration: 0.3s;
    transition-property: max-height;
  }

  .navigation.open {
    max-height: 200px;
  }

  .link-list {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  .link-item {
    width: 100%;
  }

  .link {
    display: block;
    width: 100%;
    height: 50px;
    font-size: 1.1rem;
    font-weight: bold;
    line-height: 50px;
    color: white;
    letter-spacing: 2px;
    text-decoration: none;
    border-block-start: 1px solid white;
  }

  .link.top {
    display: inline-block;
  }

  .sns-list {
    display: inline-flex;
    gap: 24px;
    padding: 0;
    padding-inline-end: 0;
    margin: 0;
    list-style: none;
  }

  .sns-link {
    display: inline-block;
  }

  .sns-icon {
    width: 30px;
    height: 30px;
    opacity: 0.85;
  }
</style>
