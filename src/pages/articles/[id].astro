---
import { getAllArticles, getArticleById } from "../../apis/articles";
import Article from "../../components/Article.astro";
import SideBanners from "../../components/SideBanners.astro";
import MainSideLayout from "../../layouts/MainSideLayout.astro";

export async function getStaticPaths() {
  const articles = await getAllArticles();
  return articles.contents.map((article) => ({ params: { id: article.id } }));
}
const { id } = Astro.params;
const article = await getArticleById(id);
---

<MainSideLayout title={article.title}>
  <Fragment slot="main">
    <Article article={article} />
  </Fragment>
  <Fragment slot="aside">
    <SideBanners />
  </Fragment>
</MainSideLayout>
