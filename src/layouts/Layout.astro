---
import Header from "../components/Header.jsx";

export interface Props {
  title: string;
  isHeaderOverlay?: boolean;
  textColor?: string;
}

// デフォルトは true (ヘッダーが重なる) に設定
const { title, isHeaderOverlay = true, textColor = "#006367" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style define:vars={{ "header-text-color": textColor }}></style>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load isOverlay={isHeaderOverlay} />

    <main>
      <slot />
    </main>
  </body>
</html>
<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #f9f8f6;
  }
</style>
